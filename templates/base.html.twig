<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="UTF-8">
            <title>{% block title %}{% endblock %}</title>
            <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
            {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

            {# =============== CSS =============== #}
            {% block stylesheets %}
                <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
            {% endblock %}
        {% endblock %}
    </head>
    <body>

        {# =============== BARRE DE NAVIGATION =============== #}
        <nav>
            <a href="{{path('app_accueil')}}">
                <img src="{{ asset('assets/images/wiki.webp') }}" alt="">
            </a>
            <ul>
                <li><a href="{{path('app_accueil')}}">Accueil</a></li>
                <li><a href="{{path('app_listeCategorie')}}">Catégories</a></li>
                <li><a href="">Privé</a></li>
            </ul>


            {% if is_granted('ROLE_USER') %}
                <div>
                    <a href=""><button>Mes articles</button></a>
                    <a href="{{ path('app_logout') }}"><button>Déconnexion</button></a>
                </div>
            {% else %}
                <div>
                    <a href="{{ path('app_login') }}"><button>Connexion</button></a>
                    <a href="{{ path('app_register') }}"><button>Inscription</button></a> 
                </div>
            {% endif %}
        </nav>

        {# =============== BANNIÈRE =============== #}
        <header>
            {% block header %}{% endblock %}
        </header>

        {# =============== MAIN =============== #}
        <main>
            {% block body %}{% endblock %}
        </main>

        {# =============== FOOTER =============== #}
        <footer>    
            <p>Benjamin Drouin</p>
            <p>Jules Boismond</p>
            <p>Cyril Bizouarn</p>
        </footer>

        {# =============== JS =============== #}
        {% block javascripts %}
            
        {% endblock %}

    </body>
</html>
