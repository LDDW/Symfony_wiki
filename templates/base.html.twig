<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="shortcut icon" type="image/jpg" href="{{ asset('assets/images/favicon (2).ico') }}"/>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,200,0,200"/>            

        {# =============== CSS =============== #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        {% endblock %}
    {% endblock %}
</head>
<body>

{# =============== BARRE DE NAVIGATION =============== #}
<nav>
    <a href="{{ path('app_accueil') }}">
        <img src="{{ asset('assets/images/logoWiki.png') }}" alt="" style=' width :200px'>
    </a>
    <ul>
        <li><a href="{{ path('app_accueil') }}">Accueil</a></li>
        <li><a href="{{ path('app_listeCategorie') }}">Catégories</a></li>
    </ul>
    <ul>
        {% if is_granted('ROLE_USER') %}
            <li><a href="{{ path('app_prive') }}">Mes articles</a></li>
            <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
        {% else %}
            <li><a href="{{ path('app_login') }}">Connexion</a></li>
            <li><a href="{{ path('app_register') }}">Inscription</a></li>
        {% endif %}
    </ul>
</nav>

{# =============== BANNIÈRE =============== #}
<header>
    {% block header %}{% endblock %}
</header>

{# =============== MAIN =============== #}
<main>
    {% block body %}{% endblock %}
</main>

{# =============== FOOTER =============== #}
<footer>
    <p>Benjamin Drouin</p>
    <p>Jules Boismond</p>
    <p>Cyril Bizouarn</p>
</footer>

{# =============== JS =============== #}
{% block javascripts %}

{% endblock %}

</body>
</html>
