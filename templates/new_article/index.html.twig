{% extends 'base.html.twig' %}

{% block title %}Nouvel article{% endblock %}

{% block header %}
    <h1>Créer un nouvel article</h1>
{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <section>
            <div class="alignementVertical">
                {{ form_start(newArticleForm) }}
                {{ form_errors(newArticleForm) }}

                {{ form_row(newArticleForm.titre, {
                    label: 'Titre : '
                }) }}
                <br>
                {{ form_row(newArticleForm.informations, {
                    label: 'Description : '
                }) }}
                <br>
                {{ form_row(newArticleForm.image, {
                    label: "Séléctionner l'image : "
                }) }}
                <br>
                {# {{ form_row(newArticleForm.categorie) }} #}
                {{ form_row(newArticleForm.save, {
                    label: 'Enregistrer : '
                }) }}

                {{ form_end(newArticleForm) }}
            </div>
        </section>
    </div>
{% endblock %}
